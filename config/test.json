		"NetworkConnections": 4,
		"Workers": 4,
		"NsqTopic": "apt_fetch_topic",
		"NsqChannel": "apt_fetch_channel",
		"MaxAttempts": 3,
		"MaxInFlight": 20,
		"HeartbeatInterval": "10s",
		"ReadTimeout": "60s",
		"WriteTimeout": "10s",
		"MessageTimeout": "180m"
	},

